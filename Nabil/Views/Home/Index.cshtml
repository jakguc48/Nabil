@section scripts
{

    @Scripts.Render("~/bundles/jquery")

    <script>
        var modal = document.getElementById('myModalG');

        var img1 = document.getElementById('myImgG1');
        var img2 = document.getElementById('myImgG2');
        var img3 = document.getElementById('myImgG3');
        var modalImg = document.getElementById("img01G");
        var captionText = document.getElementById("captionG");

        img1.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }
        img2.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }
        img3.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }

        var span = document.getElementsByClassName("closeG")[0];

        span.onclick = function () {
            modal.style.display = "none";
        }
    </script>





}