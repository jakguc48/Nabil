<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/Content/Images/nabil_logo.png")' height="45" class="logo_nabil" />
                    </a>



                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="but">@Html.ActionLink("Strona główna", "Index", "Home")</li>
                        <li class="but">@Html.ActionLink("Menu", "Index", "Dishes")</li>
                        <li class="but">@Html.ActionLink("O nas", "About", "Home")</li>
                        <li class="but">@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Pracownik"))
                        {
                            <li class="but">@Html.ActionLink("Składniki", "Index", "Ingredients")</li>
                            <li class="but">@Html.ActionLink("Użytkownicy", "Index", "Account")</li>
                        }


                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="https://www.facebook.com/falafel.nabil/" target="_blank"><img src='@Url.Content("~/Content/Images/facebook.png")' height="26px" /></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()

    </div>
    <footer>
        @*<p>&copy; @DateTime.Now.Year - Vegan Falafel Nabil</p>
            <p>@Html.Partial("_LoginPartial")</p>*@

        <div class="footer-containerA">
            <div id="footer-leftA">  @DateTime.Now.Year - Falafel Nabil </div>
            <div id="footer-rightA">@Html.Partial("_LoginPartial")</div>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>