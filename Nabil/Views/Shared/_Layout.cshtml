<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nabil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Menu", "Index", "Dishes")</li>
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li><a href="https://www.facebook.com/" target="_blank"><img src="~/Content/Images/facebook.png"/></a></li>



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</header>

<div class="container body-content">
    @RenderBody()
    <hr />

</div>
<footer>
    @*<p>&copy; @DateTime.Now.Year - Vegan Falafel Nabil</p>
        <p>@Html.Partial("_LoginPartial")</p>*@

    <div class="footer-containerA">
        <div id="footer-leftA">  @DateTime.Now.Year - Vegan Falafel Nabil </div>
        <div id="footer-rightA">@Html.Partial("_LoginPartial")</div>
    </div>

</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
